<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="" id="login">
                <div class="from-login" >
                    <div style="margin-bottom:30px">ĐĂNG NHẬP</div>
                    <div class="content-login">
                        <label>Email</label>
                        <input class="input-login-register" type="text" />
                        <label>Mật khẩu</label>
                        <input asp-for ="Password" class="input-login-register"  />
                        <div class=" btn-login-register"><button class="btn btn-danger">ĐĂNG NHẬP</button> <button class="btn btn-secondary" onclick="showregister()">ĐĂNG KÝ</button></div>
                    </div>
                </div>
             </div>
            @model FootNet.ViewModels.AddUserViewModels
            <div class="hide-show" id="register">
                <div class="from-register" method="post" >
                    <div style="margin-bottom:30px">ĐĂNG KÝ</div>
                    <div class="content-login">
                        <label>Email</label>
                        <input class="input-login-register" asp-for="Email" type="text" />
                        <span asp-validation-for="Email"></span>
                        <label>Mật khẩu</label>
                        <input asp-for="Password" class="input-login-register" />
                        <span asp-validation-for="Password"></span>
                        <label>Xác nhận mật khẩu</label>
                        <input asp-for="Verify" class="input-login-register" />
                        <span asp-validation-for="Verify"></span>
                        <label>Tên hiển thị</label>
                        <input class="input-login-register" asp-for="Username" type="text" />
                        <div class=" btn-login-register"><button class="btn btn-danger" asp-controller="HomeController" asp-action="Add" type="submit">ĐĂNG KÝ</button> <button class="btn btn-secondary" onclick="showregister()">ĐĂNG NHẬP</button></div>
                    </div>
                </div>
            </div>
    </div>
